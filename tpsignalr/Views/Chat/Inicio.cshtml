
@model tpsignalr.aplicacion.Models.Usuario;

@{ ViewData["Title"] = "Seleccionar Sala"; }
<section class="py-10">
    <div class="container">
        <h1 class="text-uppercase font-weight-bold">Seleccionar Sala</h1>

        <form asp-action="SalaChat" asp-controller="Chat" enctype="multipart/form-data" method="post" class="mt-5">
            <div >
                <div class="form-group">
                    <label asp-for="Nombre">Ingrese su Nombre</label>
                    <input type="text" asp-for="Nombre" class="form-control border-0 bg-smoke">
                </div>

                <div class="form-group">
                    <label asp-for="SalaSeleccionada">Seleccione la sala:</label>
                    <select asp-for="SalaSeleccionada" asp-items="Model.Salas" class="form-control border-0 bg-smoke form-select"></select>
                </div>

            </div>
            <div class="text-center text-md-start text-lg-left">
                <button type="submit" class="btn btn-primary text-uppercase">
                    Ingresar
                </button>
            </div>
        </form>
    </div>
</section>
